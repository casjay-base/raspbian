#!/usr/bin/env bash

APPNAME="update-raspbian"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
PATH="/usr/games:$PATH"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# @Author      : Jason
# @Contact     : jason@casjaysdev.com
# @File        : update-raspbian
# @Created     : Mon, Dec 31, 2019, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : Update Raspbian configurations and OS
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

sleepcmd="$(expr $RANDOM \% 300)"
sleep $sleepcmd

sudo bash -c "$(curl -LSs https://github.com/systemmgr/installer/raw/master/install.sh)"

sudo update=yes bash -c "$(wget -qO - https://github.com/casjay-base/raspbian/raw/master/install.sh)"
if [ -n "$(command -v pkmgr >/dev/null 2>&1)" ]; then
  sudo pkmgr makecache && sudo pkmgr silent-upgrade
else
  sudo apt update
  sudo apt dist-upgrade -yy -q
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

exit $?
