#!/usr/bin/env bash

APPNAME="update-raspbian"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
PATH="/usr/games:$PATH"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 012820211212-git
# @Author      : Jason
# @Contact     : jason@casjaysdev.com
# @File        : update-raspbian
# @Created     : Mon, Dec 31, 2019, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : Update Raspbian configurations and OS
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

am_i_online || exit

sleepcmd="$(expr $RANDOM \% 300)"
sleep "$sleepcmd"

sudo update=yes bash -c "$(curl -LSs https://github.com/casjay-base/raspbian/raw/master/install.sh 2>/dev/null || exit)"

if [ -f "$(command -v pkmgr >/dev/null 2>&1)" ]; then
  sudo pkmgr makecache && sudo pkmgr silent-upgrade
else
  sudo apt update 2>/dev/null
  sudo apt dist-upgrade -yy -q 2>/dev/null
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

exit $?
