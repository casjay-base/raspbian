#!/usr/bin/env bash

HOST=$(hostname -f)
HOSTNAME=$(hostname -f)
HOSTSHORT=$(hostname -s)

NETDEV="$(ip route | grep default | sed -e "s/^.*dev.//" -e "s/.proto.*//")"
CURRIP4="$(/sbin/ifconfig $NETDEV | grep -E "venet|inet" | grep -v "127.0.0." | grep 'inet' | grep -v inet6 | awk '{print $2}' | sed 's#addr:##g' | head -n1)"

if [ -f  ]; then
  sed -i "s#MY IP Adress is.#MY IP Adress is: $CURRIP4#g" /etc/casjaysdev/messages/legal.txt
  cp -Rf /etc/casjaysdev/messages/legal.txt /etc/issue
  /etc/issue && /usr/games/fortune | /usr/games/cowsay > /etc/motd 
  printf "\n\n" | tee >> /etc/motd
fi
